<div class="container bg">
    <div class = "row">
        <div class="center col-sm-12">
            <img src="" alt ="">
            <h1>Eat-Da-Burger</h1>
            <p></p>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <hr>
        <h2>Burgers Available to Eat!</h2>

        <ul>
            {{#each burgers}}
            {{#unless this.devoured}}
            <li>
                {{this.id}}
                {{this.burger_name}}

            <form action ="/{{this.id}}?_method=PUT" method="POST">
              <input type ="hidden" name ="devoured" value ="true">           
              <button class = "btn-primary" type ="submit">Devoure it!</button>
              </form>
            </li>
            {{/unless}}
            {{/each}}
        </ul>
        </div>
        <div class="col-sm-6">
          <h2>Burgers that Have Been Eaten!</h2>

          {{#each burgers}}
          {{#if this.devoured}}
          <li>
              {{this.id}}
              {{this.burger_name}}
          </li>
          {{/if}}
          {{/each}}
        </div>
    </div>

    <div class="row">
        <div class="center col-sm-12">
            <h2>Add a Burger!</h2>
        <form class="create-update-form" action= "/" method ="POST">
          <div class = "form-group">
              <p>Enter a burger you want to order and click the Submit Order button.</p>
          </div>
          <button class="btn-primary" type ="Submit Order"></button>
        </form>
        </div>
    </div>
</div>
